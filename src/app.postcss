/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

body,
html {
	overflow: hidden;
	cursor: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' viewport='0 0 100 100' style='fill:black;font-size:18px;'><text y='50%'>ðŸ¦´</text></svg>")
			16 0,
		auto;
}

main {
	@apply flex items-center justify-center h-full w-full min-h-screen text-center;
}

::-moz-selection {
	@apply bg-purple-200;
}
::selection {
	@apply bg-purple-200;
}

*,
button,
p,
span {
	@apply font-mono;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	@apply font-serif;
}

h1 {
	@apply text-4xl m-auto mt-4 max-w-md;
}

button:not(:disabled) {
	will-change: transform;
	@apply transition hover:scale-125 hover:text-purple-700;
}

button.ctrl {
	@apply fixed bottom-2 font-serif uppercase leading-none;
}

button:disabled {
	cursor: not-allowed;
	opacity: 0.4;
}

a {
	@apply border-2 rounded-lg border-purple-300 bg-purple-50 p-4 inline-flex justify-center items-center font-mono text-black text-2xl mx-4 transition;
}
a:hover {
	@apply border-transparent bg-purple-900 text-gray-50;
}

a.skip-to-main {
	display: block;
	border: none;
	width: 1px;
	height: 1px;
	margin: 0;
	padding: 0;
	overflow: hidden;
	position: absolute;
}

a.skip-to-main:focus {
	background-color: var(--color-off-black);
	color: var(--color-white);
	width: auto;
	height: auto;
	padding: 0.5em;
	z-index: var(--z-overlay);
}
